{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "security:openssf-scorecard"
  ],
  "bumpVersion": "patch",
  "customManagers": [
    {
      "description": "Automatically update helm chart app version",
      "customType": "regex",
      "fileMatch": [
        "(^|/)Chart\\.yaml$"
      ],
      "matchStrings": [
        "# renovate datasource=(?<datasource>\\S+) depName=(?<depName>\\S+) extractVersion=(?<extractVersion>\\S+)\\nappVersion:\\s?(?<currentValue>\\S+)\\n"
      ]
    }
  ],
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "all non-major dependencies (exclude 0.x.y)",
      "groupSlug": "all-minor-patch-semver",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentValue": "!/^v?0\\./"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/lldap/lldap"
      ],
      "versioning": "regex:^(?<minor>\\d+)-(?<patch>\\d+)-(?<build>\\d+)-(?<compatibility>.*)?$"
    },
    {
      "packagePatterns": [
        "^(gh|ls)cr.io\\/linuxserver\\/"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)-ls(?<revision>\\d+)$"
    }
  ]
}
