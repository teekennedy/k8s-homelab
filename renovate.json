{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "security:openssf-scorecard"
  ],
  "bumpVersion": "patch",
  "customManagers": [
    {
      "description": "Automatically update helm chart app version",
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)Chart\\.yaml$/"
      ],
      "matchStrings": [
        "# renovate datasource=(?<datasource>\\S+) depName=(?<depName>\\S+) extractVersion=(?<extractVersion>\\S+)\\nappVersion:\\s?(?<currentValue>\\S+)\\n"
      ]
    }
  ],
  "packageRules": [
    {
      "groupName": "all non-major dependencies (excluding 0.x)",
      "groupSlug": "all-minor-patch-semver",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentValue": "!/^v?0\\./"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/lldap/lldap"
      ],
      "versioning": "regex:^(?<minor>\\d+)-(?<patch>\\d+)-(?<build>\\d+)-(?<compatibility>.*)?$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": [
        "^(?:gh|ls)cr\\.io/linuxserver/"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)-ls(?<revision>\\d+)$"
    },
    // override the renovate-detected sourceUrl to point to the upstream repo instead
    {
      "matchPackageNames": ["ghcr.io/jellyfin/jellyfin"],
      "sourceUrl": "https://github.com/jellyfin/jellyfin"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^(?:gh|ls)cr\\.io/linuxserver/prowlarr$"],
      "sourceUrl": "https://github.com/Prowlarr/Prowlarr"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^(?:gh|ls)cr\\.io/linuxserver/sonarr$"],
      "sourceUrl": "https://github.com/Sonarr/Sonarr"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^(?:gh|ls)cr\\.io/linuxserver/radarr$"],
      "sourceUrl": "https://github.com/Radarr/Radarr"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^(?:gh|ls)cr\\.io/linuxserver/qbittorrent$"],
      "sourceUrl": "https://github.com/qbittorrent/qBittorrent"
    }
  ]
}
