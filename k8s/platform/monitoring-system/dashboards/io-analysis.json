{
  "uid": "io-analysis",
  "title": "IO Analysis",
  "editable": false,
  "schemaVersion": 39,
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": { "selected": true, "text": "default", "value": "default" },
        "refresh": 1
      },
      {
        "name": "loki",
        "type": "datasource",
        "query": "loki",
        "current": { "selected": true, "text": "default", "value": "default" },
        "refresh": 1
      },
      {
        "name": "node",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "$datasource" },
        "query": "label_values(node_disk_io_time_seconds_total, instance)",
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "refresh": 2
      },
      {
        "name": "device",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "$datasource" },
        "query": "label_values(node_disk_info{instance=~\"$node\", model!=\"VIRTUAL-DISK\"}, device)",
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "refresh": 2
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "Node IO",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Queue Depth per Device per Node",
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "fillOpacity": 10 }
        },
        "overrides": []
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "$datasource" },
          "expr": "rate(node_disk_io_time_weighted_seconds_total{instance=~\"$node\", device=~\"$device\"}[5m]) * on(instance, device) group_left node_disk_info{model!=\"VIRTUAL-DISK\"}",
          "legendFormat": "{{instance}} {{device}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Disk Write Throughput per Device per Node",
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": { "fillOpacity": 10 }
        },
        "overrides": []
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "$datasource" },
          "expr": "rate(node_disk_written_bytes_total{instance=~\"$node\", device=~\"$device\"}[5m]) * on(instance, device) group_left node_disk_info{model!=\"VIRTUAL-DISK\"}",
          "legendFormat": "{{instance}} {{device}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU iowait per Node",
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "fillOpacity": 10 }
        },
        "overrides": []
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "$datasource" },
          "expr": "rate(node_cpu_seconds_total{mode=\"iowait\", instance=~\"$node\"}[5m])",
          "legendFormat": "{{instance}} cpu{{cpu}}"
        }
      ]
    },
    {
      "type": "row",
      "title": "Top Writers",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Top 10 Pods by Write Throughput",
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": { "fillOpacity": 10 }
        },
        "overrides": []
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "$datasource" },
          "expr": "topk(10, rate(container_fs_writes_bytes_total{container!=\"\"}[5m]))",
          "legendFormat": "{{namespace}}/{{pod}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Top 10 Pods by Write IOPS",
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "fillOpacity": 10 }
        },
        "overrides": []
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "$datasource" },
          "expr": "topk(10, rate(container_fs_writes_total{container!=\"\"}[5m]))",
          "legendFormat": "{{namespace}}/{{pod}}"
        }
      ]
    },
    {
      "type": "row",
      "title": "Longhorn Volumes",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Longhorn Volume Write IOPS",
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 19 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "fillOpacity": 10 }
        },
        "overrides": []
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "$datasource" },
          "expr": "longhorn_volume_write_iops",
          "legendFormat": "{{volume}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Longhorn Volume Write Throughput",
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 19 },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": { "fillOpacity": 10 }
        },
        "overrides": []
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "$datasource" },
          "expr": "longhorn_volume_write_throughput",
          "legendFormat": "{{volume}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Longhorn Volume Write Latency",
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 19 },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "fillOpacity": 10 }
        },
        "overrides": []
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "$datasource" },
          "expr": "longhorn_volume_write_latency",
          "legendFormat": "{{volume}}"
        }
      ]
    },
    {
      "type": "row",
      "title": "Queue Depth Overview",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Queue Depth Overlay (All Devices Stacked)",
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 28 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "fillOpacity": 30,
            "stacking": { "mode": "normal" }
          }
        },
        "overrides": []
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "$datasource" },
          "expr": "rate(node_disk_io_time_weighted_seconds_total{instance=~\"$node\", device=~\"$device\"}[5m]) * on(instance, device) group_left node_disk_info{model!=\"VIRTUAL-DISK\"}",
          "legendFormat": "{{instance}} {{device}}"
        }
      ]
    },
    {
      "type": "row",
      "title": "Node Logs",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 36 },
      "collapsed": true,
      "panels": [
        {
          "type": "logs",
          "title": "Logs for $node",
          "datasource": { "type": "loki", "uid": "$loki" },
          "gridPos": { "h": 12, "w": 24, "x": 0, "y": 37 },
          "options": {
            "showTime": true,
            "showLabels": false,
            "showCommonLabels": false,
            "wrapLogMessage": true,
            "prettifyLogMessage": false,
            "enableLogDetails": true,
            "sortOrder": "Descending",
            "dedupStrategy": "none"
          },
          "targets": [
            {
              "datasource": { "type": "loki", "uid": "$loki" },
              "expr": "{node_name=~\"$node\"}",
              "refId": "A"
            }
          ]
        }
      ]
    }
  ]
}
